{
    "manifest_version": 2,
    "name": "Send Later Unread",
    "description": "This is an extension to make messages saved in the Outbox unread when you press Send Later in Thunderbird.",
    "version": "1.0",
    "author": "Satoru Izaki",
    "homepage_url": "https://github.com/sizaki30/tb-send-later-unread",
    "browser_specific_settings": {
        "gecko": {
            "id": "tb-send-later-unread@apar.jp",
            "strict_min_version": "115.0"
        }
    },
    "icons": {
        "64": "images/icon-64px.png",
        "32": "images/icon-32px.png",
        "16": "images/icon-16px.png"
    },    
    "background": {
        "page": "background.html"
    },
    "permissions": [
        "compose",
        "messagesRead"
    ]
}